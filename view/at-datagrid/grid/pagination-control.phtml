<?php 
if ($this->pageCount): ?>
<div class="pagination pagination-left">
    <ul>

        <!-- First page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->joacubBaseQueryParams(array('page' => $this->first)); ?>">&laquo; First</a>
        </li>

        <!-- Previous page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->joacubBaseQueryParams(array('page' => $this->previous-9)); ?>">&lsaquo; Previous 10</a>
        </li>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page): ?>
        <li<?php echo ($page == $this->current) ? ' class="active"' : ''; ?>>
            <a href="<?php echo $this->joacubBaseQueryParams(array('page' => $page)); ?>"><?php echo $page; ?></a>
        </li>
        <?php endforeach; ?>

        <!-- Next page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->joacubBaseQueryParams(array('page' => $this->previous+9)); ?>">Next 10 &rsaquo;</a>
        </li>

        <!-- Last page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->joacubBaseQueryParams(array('page' => $this->last)); ?>">Last &raquo;</a>
        </li>

    </ul>
</div>
<?php endif; ?>

