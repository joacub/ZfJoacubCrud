if ($this->pageCount > 1 || true == true): ?>
<div class="b-pager">
    <table>
        <tr>
            <td>Pages:</td>
            <td class="prev">
		        <?php if (isset($this->previous)): ?>
		          <a href="<?= $this->atBaseQueryParams(array('page' => $this->previous)); ?>" title="<?= $this->translate('Previous page'); ?>">
