<?php if ($this->pageCount): ?>
<div class="pagination pagination-centered pagination-small">
    <ul>

        <!-- First page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->atBaseQueryParams(array('page' => $this->first)); ?>">&lt;&lt; First</a>
